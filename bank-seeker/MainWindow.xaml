                </ScrollViewer>
            </Border>
        </Grid>



        <TabControl Margin="10" VerticalContentAlignment="Top" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
            <TabItem Header="거래 조회 내역" Padding="5">
                <DataGrid Margin="5" BorderBrush="{x:Null}" Background="{x:Null}"/>
            </TabItem>
            <TabItem Header="콜백 설정" Padding="5">
                <DataGrid Margin="5" BorderBrush="{x:Null}" Background="{x:Null}"/>
            </TabItem>
            <TabItem Header="도움말" Padding="5">
                <RichTextBox Margin="5" BorderBrush="{x:Null}" BorderThickness="0" IsReadOnly ="True">
                    <RichTextBox.Resources>
                        <Style TargetType="{x:Type Paragraph}">
                            <Setter Property="Margin" Value="0"/>
                        </Style>
                    </RichTextBox.Resources>
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="도움을 드리고자.."/>
                        </Paragraph>
                        <Paragraph>
                            <Run Text="어쩌구 저저구.."/>
                        </Paragraph>
                        <Paragraph>
                            <Run/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Column="1" Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="은행" Width="80"/>
                <ComboBox SelectedIndex="0" >
                    <ComboBoxItem>국민은행</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="계좌번호" Width="80"/>
                <TextBox Height="23" TextWrapping="Wrap" Text="957502-01-427751" Width="120"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="아이디" Width="80"/>
                <TextBox Height="23" TextWrapping="Wrap" Text="YEO7311" Width="120"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="비밀번호" Width="80"/>
                <PasswordBox Height="23" Width="120" Password="1234"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="시작 일자" Width="80"/>
                <DatePicker Margin="0,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="종료 일자" Width="80"/>
                <DatePicker Margin="0,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="자동 반복" Width="80"/>
                <CheckBox Content="활성화" Height="14"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="반복 간격(s)" Width="80"/>
                <Slider Width="100" Height="18"/>
            </StackPanel>
            <Button Content="실행" Height="25" />
        </StackPanel>
    </Grid>

</Window>
